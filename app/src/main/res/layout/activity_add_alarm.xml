<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.hamitao.zhiwan.activity.AddAlarmActivity">

    <include layout="@layout/title_bar" />

    <TimePicker
        android:id="@+id/timepicker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:calendarViewShown="false"
        android:timePickerMode="spinner"></TimePicker>

    <RelativeLayout
        android:id="@+id/rl_alarm_cycle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_hight"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <View
            style="@style/h_divider"
            android:layout_alignParentTop="true" />

        <TextView
            android:id="@+id/tv_cycle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:text="重复"
            android:textSize="14sp" />

        <TextView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="10dp"
            android:drawableRight="@drawable/icon_arraow_right"
            android:gravity="center_vertical" />

        <View
            style="@style/h_divider"
            android:layout_alignParentBottom="true" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_alarm_lable"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_hight"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:text="标签"
            android:textSize="14sp" />

        <TextView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="10dp"
            android:drawableRight="@drawable/icon_arraow_right"
            android:gravity="center_vertical" />

        <View
            style="@style/h_divider"
            android:layout_alignParentBottom="true" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_alarm_bell"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_hight"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:text="铃声"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_bell"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="10dp"
            android:gravity="center_vertical"
            android:text="默认" />

        <View
            style="@style/h_divider"
            android:layout_alignParentBottom="true" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_record_bell"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_hight"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:text="定制录音铃声"
            android:textSize="14sp" />

        <TextView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="10dp"
            android:drawableRight="@drawable/icon_arraow_right"
            android:gravity="center_vertical" />

        <View
            style="@style/h_divider"
            android:layout_alignParentBottom="true" />

    </RelativeLayout>


</LinearLayout>
