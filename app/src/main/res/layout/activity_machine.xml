<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_activity"
    android:orientation="vertical"
    tools:context="com.hamitao.zhiwan.activity.MachineActivity">

    <include layout="@layout/title_bar" />

    <ScrollView
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            //设备状态

            <RelativeLayout
                android:id="@+id/rl_machine_state"
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_hight"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:gravity="center_vertical"
                    android:text="设备状态"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:gravity="center_vertical"
                    android:text="开机" />

                <View
                    style="@style/h_divider"
                    android:layout_alignParentBottom="true" />

            </RelativeLayout>
            //电量

            <RelativeLayout
                android:id="@+id/rl_machine_electric"
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_hight">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:text="电量" />

                <TextView
                    android:id="@+id/tv_electric"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:text="50%" />

                <View
                    style="@style/h_divider"
                    android:layout_alignParentBottom="true" />
            </RelativeLayout>
            //信号

            <RelativeLayout
                android:id="@+id/rl_machine_signal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_hight">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:text="信号" />

                <TextView
                    android:id="@+id/tv_signal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:text="强" />

                <View
                    style="@style/h_divider"
                    android:layout_alignParentBottom="true" />
            </RelativeLayout>
            //wifi

            <RelativeLayout
                android:id="@+id/rl_machine_wifi"
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_hight">

                <TextView
                    android:id="@+id/text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:text="WIFI" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/text"
                    android:text="jidain" />

                <TextView
                    android:id="@+id/tv_wifi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:text="重配" />

                <View
                    style="@style/h_divider"
                    android:layout_alignParentBottom="true" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_alarm"
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_hight"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:text="闹钟" />

            <View style="@style/h_divider" />

            <TextView
                android:id="@+id/tv_deliver_list"
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_hight"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:text="投送设备清单" />

            <View style="@style/h_divider" />

            <TextView
                android:id="@+id/tv_machine_record"
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_hight"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:text="设备录音" />

            <View style="@style/h_divider" />

            <TextView
                android:id="@+id/tv_contact"
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_hight"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:text="联系人" />

            <View style="@style/h_divider" />

            <TextView
                android:id="@+id/tv_phone"
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_hight"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:text="设备电话" />

            <View style="@style/h_divider" />

            <TextView
                android:id="@+id/tv_touch"
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_hight"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:text="碰过的设备" />

            <View style="@style/h_divider_gray" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_hight"
                android:gravity="center"
                android:text="远程管理"
                android:textColor="@color/text_default_d"
                android:textStyle="bold" />

            <View style="@style/h_divider" />

            <RelativeLayout
                android:id="@+id/rl_machine_isOpen"
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_hight"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:gravity="center_vertical"
                    android:text="开机"
                    android:textSize="14sp" />

                <Switch
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:clickable="false"
                    android:gravity="center_vertical" />

                <View
                    style="@style/h_divider"
                    android:layout_alignParentBottom="true" />


            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/rl_machine_play"
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_hight"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:gravity="center_vertical"
                    android:text="播放"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:gravity="center_vertical" />

                <View
                    style="@style/h_divider"
                    android:layout_alignParentBottom="true" />

            </RelativeLayout>

        </LinearLayout>


    </ScrollView>

</LinearLayout>
