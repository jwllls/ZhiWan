<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/title_bar" />

    <TextView
        android:id="@+id/app_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="100dp"
        android:drawablePadding="10dp"
        android:drawableTop="@drawable/app_logo"
        android:gravity="center"
        android:textSize="20sp"
        android:visibility="gone" />


    <TextView
        android:id="@+id/tv_about"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_hight"
        android:gravity="center_vertical"
        android:text="关于" />

    <View style="@style/h_divider" />

    <TextView
        android:id="@+id/tv_productIntroduce"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_hight"
        android:gravity="center_vertical"
        android:text="产品使用说明" />

    <View style="@style/h_divider_gray" />

    <TextView
        android:id="@+id/tv_aggrement"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_hight"
        android:gravity="center_vertical"
        android:text="用户服务协议" />

    <View style="@style/h_divider" />

    <TextView
        android:id="@+id/tv_privacy"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_hight"
        android:gravity="center_vertical"
        android:text="使用条款和隐私说明" />

    <View style="@style/h_divider" />


</LinearLayout>