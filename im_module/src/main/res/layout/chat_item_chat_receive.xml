<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/image_user_head"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="51dp"
        android:layout_toRightOf="@+id/image_user_head">

        <LinearLayout
            android:id="@+id/layout_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="60dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal" />

        <ProgressBar
            android:id="@+id/image_progress"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignBottom="@+id/layout_content"
            android:layout_toRightOf="@+id/layout_content"
            android:visibility="gone" />

        <TextView
            android:id="@+id/btn_resend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_default_round_rectangle_selector"
            android:paddingBottom="2dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="2dp"
            android:text="重发"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_from_broadcast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:layout_alignRight="@+id/layout_content"
            android:layout_below="@+id/layout_content"
            android:text="来自广播"
            android:layout_marginRight="8dp"
            android:visibility="gone"
            android:textColor="@color/text_default_l"
            android:textSize="11sp" />

    </RelativeLayout>

</RelativeLayout>